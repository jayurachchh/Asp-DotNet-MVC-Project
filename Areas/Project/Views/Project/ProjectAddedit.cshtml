@using Project_Management2.Areas.Project.Models;
@{
    ViewData["Title"] = "Addedit Page";
}
@model ProjectModel

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-area="Project" asp-controller="Project" asp-action="ProjectList">Project List</a></li>
            <li class="breadcrumb-item active">Add Project</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Project Details Form</h5>

        <!-- No Labels Form -->
        <form class="row g-3" asp-action="Save" asp-controller="Project" asp-area="Project">
            @Html.HiddenFor(x=>x.ProjID)
            <div class="col-md-4">
                <label for="inputName5" class="form-label"><span class="text-danger">*</span>Project Name</label>
                <input type="text" class="form-control" placeholder="Enter Project Name" asp-for="ProjName">
                <span asp-validation-for="ProjName" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="inputName5" class="form-label"><span class="text-danger">*</span>Project StartDate</label>
                <input type="date" class="form-control" placeholder="Enter Project StartDate" asp-for="ProjStartDate">
                <span asp-validation-for="ProjStartDate" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="inputName5" class="form-label"><span class="text-danger">*</span>Project Compleation Date</label>
                <input type="date" class="form-control" placeholder="Enter Project Compleation Date" asp-for="ProjEndDate">
                <span asp-validation-for="ProjEndDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label for="inputName5" class="form-label"><span class="text-danger">*</span>Select Is Manager</label>
                <select id="inputStatus" class="form-select" asp-for="EmpID" asp-items="@(new SelectList(ViewBag.employeemanagerlist,"EmpID","EmpName"))">
                    <option selected>Select Is Manager</option>
                </select>
                <span asp-validation-for="EmpID" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="inputName5" class="form-label"><span class="text-danger">*</span>Project Total Cost</label>
                <input type="text" class="form-control" placeholder="Enter Project Total Cost" asp-for="ProjTotalCost">
                <span asp-validation-for="ProjTotalCost" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label for="inputName5" class="form-label"><span class="text-danger">*</span>Select Status</label>
                <select  id="inputStatus" class="form-select" asp-for="StatusID" asp-items="@(new SelectList(ViewBag.StatusList,"StatusID","StatusName"))">
                    <option selected>Select Status</option>
                </select>
                <span asp-validation-for="StatusID" class="text-danger"></span>
            </div>
            <div class="col-4">
                <div class="form-floating">
                    <textarea class="form-control" id="floatingTextarea" style="height: 100px;" placeholder="Enter Project Description" asp-for="ProjDescription"></textarea>
                    <label for="floatingTextarea"><span class="text-danger">*</span>Project Description</label>
                    <span asp-validation-for="ProjDescription" class="text-danger"></span>
                </div>
            </div>

            <div class="col-4">
                <div class="form-floating">
                    <textarea class="form-control" id="floatingTextarea" style="height: 100px;" placeholder="Enter Project Source" asp-for="ProjSource"></textarea>
                    <label for="floatingTextarea"><span class="text-danger">*</span>Project Source</label>
                    <span asp-validation-for="ProjSource" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="form-floating">
                    <textarea class="form-control" id="floatingTextarea" style="height: 100px;" placeholder="Enter Project Documentation" asp-for="ProjDocumentation"></textarea>
                    <label for="floatingTextarea"><span class="text-danger">*</span>Project Documentation</label>
                    <span asp-validation-for="ProjDocumentation" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-info btn-md">Submit</button>
                <a class="btn btn-secondary btn-md" asp-area="Project" asp-controller="Project" asp-action="ProjectList">Back</a>
                <button type="reset" class="btn btn-danger btn-md">Reset</button>
            </div>
        </form><!-- End No Labels Form -->

    </div>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial.cshtml" />
}
